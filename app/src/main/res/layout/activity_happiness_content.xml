<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HappinessContent">

    <include
        layout="@layout/toolbar_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/an_text"
        android:elevation="6dp" />


    <ViewFlipper
        android:id="@+id/vfHappiness"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/TextTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/Hc_Gratitude_Heading"></TextView>


            <EditText
                android:id="@+id/etGratitude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/my_border"
                android:gravity="top|left"
                android:hint="@string/Hc_Gratitide_Hint"
                android:inputType="textMultiLine"
                android:lines="4"
                android:maxLines="10"
                android:minLines="6"
                android:outlineAmbientShadowColor="@color/main_color"
                android:scrollbars="vertical" />

            <Button
                android:id="@+id/btnHpSaveGratitude"
                style="@style/ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Save"></Button>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/TextTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/Hc_Belief_Heading"></TextView>


            <EditText
                android:id="@+id/etBelieveName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/my_border"
                android:gravity="top|left"
                android:hint="@string/Hint_Belief_Name"
                android:inputType="textMultiLine"
                android:lines="4"
                android:maxLines="10"
                android:minLines="6"
                android:outlineAmbientShadowColor="@color/main_color"
                android:scrollbars="vertical" />


            <EditText
                android:id="@+id/etBelieveDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/my_border"
                android:gravity="top|left"
                android:hint="@string/Hint_Belief_Desc"
                android:inputType="textMultiLine"
                android:lines="4"
                android:maxLines="10"
                android:minLines="6"
                android:outlineAmbientShadowColor="@color/main_color"
                android:scrollbars="vertical" />


            <Button
                android:id="@+id/btnHpSaveBelief"
                style="@style/ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Save"></Button>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/TextTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Traction"></TextView>


            <EditText
                android:id="@+id/etTractionName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/my_border"
                android:gravity="top|left"
                android:hint="@string/Hint_Traction_Name"
                android:inputType="textMultiLine"
                android:lines="4"
                android:maxLines="10"
                android:minLines="6"
                android:outlineAmbientShadowColor="@color/main_color"
                android:scrollbars="vertical" />


            <Button
                android:id="@+id/btnHpSaveTraction"
                style="@style/ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Save"></Button>


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/TextTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Reframe"></TextView>


            <EditText
                android:id="@+id/etReframeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/my_border"
                android:gravity="top|left"
                android:hint="@string/Hint_Traction_Name"
                android:inputType="textMultiLine"
                android:lines="4"
                android:maxLines="10"
                android:minLines="6"
                android:outlineAmbientShadowColor="@color/main_color"
                android:scrollbars="vertical" />


            <Button
                android:id="@+id/btnHpSaveReframe"
                style="@style/ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Save"></Button>


        </LinearLayout>

    </ViewFlipper>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnHpPrev"
            style="@style/SmallButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_chevron_left_black_24dp"></ImageButton>

        <ImageButton
            android:id="@+id/btnHpNext"
            style="@style/SmallButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_btnright"></ImageButton>

    </LinearLayout>


</LinearLayout>
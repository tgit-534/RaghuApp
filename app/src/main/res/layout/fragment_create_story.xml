<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentCreateStory">


    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/lbl_your_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Express your story!" />

            <Button
                android:id="@+id/btn_fm_submitStory"
                style="@style/ButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="Your Story!"></Button>

            <EditText
                android:id="@+id/et_fm_story"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/my_border"
                android:gravity="top|left"
                android:hint="@string/Hint_fm_commentCaptain"
                android:inputType="textMultiLine"
                android:lines="4"
                android:maxLines="10"
                android:minLines="6"
                android:outlineAmbientShadowColor="@color/main_color"
                android:scrollbars="vertical" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_gameDefine"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FragmentGameDefine">

    <ImageButton
        android:id="@+id/ImgBtnDialogGameDefineCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:background="@color/transparentColor"
        android:src="@drawable/ic_baseline_cancel_24">

    </ImageButton>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_fm_gameName"
                style="@style/TextTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/activity_5dp"
                android:gravity="center"
                android:text="@string/fm_gameDefine_GameName"></TextView>

            <EditText
                android:id="@+id/et_fm_gameName"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_5dp"
                android:background="@drawable/my_border"
                android:hint="Game Name"
                android:padding="5dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"

                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_fm_gameDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/activity_5dp"
                    android:background="@drawable/my_border"
                    android:enabled="false"
                    android:hint=" Game Starts"
                    android:padding="5dp" />

                <Button
                    android:id="@+id/btn_fm_gameStartDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Integrity_Date" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_5dp"

                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_fm_gameEnds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/activity_5dp"
                    android:background="@drawable/my_border"
                    android:enabled="false"
                    android:hint=" Game Ends"
                    android:padding="5dp"
                    />

                <Button
                    android:id="@+id/btn_fm_gameEndDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Integrity_Date" />
            </LinearLayout>

            <EditText
                android:id="@+id/et_fm_gameCoins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_5dp"
                android:layout_marginRight="@dimen/activity_5dp"
                android:background="@drawable/my_border"
                android:hint="Coins at Stake"
                android:inputType="number"
                android:padding="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/btn_fm_gameSubmit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_10dp"
                    android:text="@string/fm_gameDefine_Button" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_fm_gameDefineValidate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone">

            </TextView>
        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/ll_gameDefine"
    tools:context=".FragmentGameDefine">

    <TextView
        style="@style/TextTitle"
       android:layout_marginTop="@dimen/activity_5dp"
        android:id="@+id/tv_fm_gameName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="@string/fm_gameDefine_GameName"></TextView>

    <EditText
        android:id="@+id/et_fm_gameName"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/my_border"
        android:layout_margin="@dimen/activity_5dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:hint="Game Name"
        android:padding="2dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"

        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_fm_gameDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/my_border"
            android:enabled="false"
            android:layout_marginRight="@dimen/activity_5dp"
            android:hint=" Game Starts"
            android:padding="2dp" />

        <Button
            android:id="@+id/btn_fm_gameStartDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Integrity_Date" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_5dp"

        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_fm_gameEnds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/my_border"
            android:layout_marginRight="@dimen/activity_5dp"
            android:enabled="false"
            android:hint=" Game Ends"
            android:padding="5dp" />

        <Button
            android:id="@+id/btn_fm_gameEndDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Integrity_Date"
            />
    </LinearLayout>

    <EditText
        android:id="@+id/et_fm_gameCoins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/my_border"
        android:layout_marginRight="@dimen/activity_5dp"
        android:layout_margin="@dimen/activity_5dp"
        android:hint="Coins at Stake"
        android:padding="5dp" />

    <Button
        android:id="@+id/btn_fm_gameSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_10dp"
        android:text="@string/fm_gameDefine_Button" />


</LinearLayout>
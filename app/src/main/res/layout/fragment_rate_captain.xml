<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_fg_ratecaptain"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".FragmentRateCaptain">

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/lbl_your_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Give Your Captain Rating!" />

            <RatingBar
                android:id="@+id/rb_fm_captainRater"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5" />

            <EditText
                android:id="@+id/txt_your_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone"
                android:inputType="text" />

            <EditText
                android:id="@+id/et_fm_captainComments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/my_border"
                android:gravity="top|left"
                android:hint="@string/Hint_fm_commentCaptain"
                android:inputType="textMultiLine"
                android:lines="4"
                android:maxLines="10"
                android:minLines="6"
                android:outlineAmbientShadowColor="@color/main_color"
                android:scrollbars="vertical" />

            <Button
                android:id="@+id/btn_fm_rateCaptain"
                style="@style/ButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Rate Your Captain!"></Button>

        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>
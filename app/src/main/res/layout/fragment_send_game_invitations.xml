<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".FragmentSendGameInvitations">

    <ImageButton
        android:id="@+id/ImgBtnDialogSendGameInvitationCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:background="#0000"
        android:src="@drawable/ic_baseline_cancel_24"></ImageButton>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:id="@+id/ll_sendInvitations"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/TextTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/activity_5dp"
                android:gravity="center"
                android:text="@string/fm_sendInvitations_Heading" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/activity_5dp"
                android:gravity="center"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/etInviteForTeamGame"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="@dimen/dimen_20dp"
                    android:layout_marginRight="@dimen/dimen_20dp"
                    android:layout_marginBottom="@dimen/activity_5dp"
                    android:hint="Email Id:"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"></EditText>


                <EditText
                    android:id="@+id/etInviteForTeamGame2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="@dimen/dimen_20dp"
                    android:layout_marginRight="@dimen/dimen_20dp"
                    android:layout_marginBottom="@dimen/activity_5dp"
                    android:hint="Email Id 2:"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"></EditText>

                <EditText
                    android:id="@+id/etInviteForTeamGame3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="@dimen/dimen_20dp"
                    android:layout_marginRight="@dimen/dimen_20dp"
                    android:layout_marginBottom="@dimen/activity_5dp"
                    android:hint="Email Id 3:"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"></EditText>

                <EditText
                    android:id="@+id/etInviteForTeamGame4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="@dimen/dimen_20dp"
                    android:layout_marginRight="@dimen/dimen_20dp"
                    android:layout_marginBottom="@dimen/activity_5dp"
                    android:hint="Email Id 4:"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"></EditText>


                <EditText
                    android:id="@+id/etInviteForTeamGame5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="@dimen/dimen_20dp"
                    android:layout_marginRight="@dimen/dimen_20dp"
                    android:layout_marginBottom="@dimen/activity_5dp"
                    android:hint="Email Id 5:"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"></EditText>

                <Button
                    android:id="@+id/btn_teamGame_invite"
                    style="@style/ButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Add"></Button>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <!-- TODO: Update blank fragment layout -->


</LinearLayout>